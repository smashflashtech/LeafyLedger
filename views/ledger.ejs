<section class="pdBody">
  <!-- Currently the backend is sending local data in a context object named 'plants' which is an array of objects -->
    <section class="pdPlantContainer">
    <% for (let i = 0; i < plants.length; i++) { %>
    <!-- href -->
        <div class="well">
          <div class="pdPlantPic">
            <img class="pdThumb well well-sm" alt="<%= plants[i].common_name %>" src="<%= plants[i].image_url %>">
          </div>
          <div class="pdPlantDetails">
            <div class="pdPlantNames">
              <h2 class ="pdName"><%= plants[i].common_name %></h2>
              <h3 class="pdSciName"><%= plants[i].scientific_name %></h3>
            </div>
          </div>
              
          
          <div class="watered">
            <h2>Last Watered: <%= plants[i].dataValues.lastWatered %></h2>
            <a href="/ledger/edit/<%= plants[i].dataValues.id %>">Edit</a>
          </div>
              

          <div class ="pdPlantDead"> 
            <!-- coming back to this -->
              <form method="POST" action="/cemetery">
                <button class="dead" type="submit">‚ò†Ô∏è
                </button> 
              </form> 
          </div>      


          <div class ="pdPlantTrashed">  
            <form method="POST" action="/ledger/<%=plants[i].dataValues.id%>?_method=DELETE"%></form>   
              <button type="submit" class="trash" >üóë
              </button>
            </form>
          </div>
        </div>
    <% }; %>
    </section>